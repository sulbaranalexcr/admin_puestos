<div class="box-body">
    <div class="form-group col-sm-4">
      <%= f.label :nombre %>
      <%= f.text_field :nombre_largo, class: "form-control", placeholder: "Nombre Hipodromo", required: true %>
      <span class="help-block"><i>* Este campo es requerido</i><span>
    </div>
    <div class="form-group col-sm-2">
      <%= f.label 'Nombre Corto' %>
      <%= f.text_field :nombre, class: "form-control", placeholder: "Nombre Corto", required: true %>
      <span class="help-block"><i>* Este campo es requerido</i><span>
    </div>

    <div class="form-group col-sm-1">
      <%= f.label 'Cant/puestos' %>
      <%= f.number_field :cantidad_puestos, class: "form-control", min: 3, max: 5, required: true %>
      <span class="help-block"><i>* Este campo es requerido</i><span>
    </div>

    <div class="form-group col-sm-1">
      <%= f.label 'CÃ³d/Nyra' %>
      <%= f.text_field :codigo_nyra, class: "form-control" %>
    </div>


    <div class="form-group col-sm-2">
      <label for="hipodromo_tipo">Tipo</label>
      <select size=1 class="form-control" placeholder="Tipo"  name="hipodromo[tipo]" id="hipodromo_tipo" />
      <option value=1 <%= @hipodromo.tipo == 1 ? "selected":""%>>Nacional</option>
      <option value=2 <%= @hipodromo.tipo == 2 ? "selected":""%>>Internacional</option>
      </select>
    </div>


    <div class="form-group">
    <%= f.check_box :cierre_api, {}%>
    <%= f.label 'Cierre API?' %>
    </div>


    <div class="form-group">
      <%= f.check_box :activo, {}%>
      <%= f.label 'Activo' %>
    </div>
</div>