<!-- Initialize Quill editor -->
<script>
  window.editor() ;
  var quill = new Quill('#editor', {
    theme: 'snow'
  });
  $('.ql-formats').css("vertical-align", "bottom");
  // $('#editor p').html('<%= "#{@reglas}".html_safe%>');
  $('.ql-editor').html('<%= "#{@reglas}".html_safe%>');



  function grabar(){
      $.ajax({
        type : "POST",
        url : '/configuracion/grabar_reglas',
        data : {
          texto: $('.ql-editor').html()
        },
        success : function(request) {
          swal("Completado", "Reglas almacenadas", "success");
        }
      });
  }

</script>



