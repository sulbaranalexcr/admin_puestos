<%= javascript_include_tag "axios.js" %>
<%= javascript_include_tag "swalert.js" %>

<script>

function consultar(){
  swalert_espera("Espere, generando reportes...")

  axios({
      method: 'POST',
        url: '/unica/chats/en_observacion',
      data: {
        "desde": $('#desde').val(),
        "hasta": $('#hasta').val()
      },
    })
    .then(function(response) {
        $('#div_preview').html(response.data);
        Swal.close();
    }
  )
  .catch(function (error) {
    swal("Lo siento", "Ocurrio un error", "error");
  });

}


</script>

<form>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Administrar mensajes en Observaci√≥n</h3>
        </div>
        <div class="form-group">
          <div class="form-group">  
            <div class="container" style="width: 100%;">
              <div class="row">
                <div class="col-md-2">
                  <div class="box">
                    <div class="form-group">
                      <label for="desde_fecha">Desde</label>
                      <input type="date"  class= "form-control"  id='desde' name='desde'  style= 'width: 150px;' required="true" value="<%= Time.now.strftime('%Y-%m-%d')%>">
                    </div>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="box">
                    <div class="form-group">
                      <label for="hasta_fecha">Hasta</label>
                      <input type="date"  class= "form-control"  id ='hasta' name= 'hasta'  style= 'width: 150px;' required="true"  value="<%= Time.now.strftime('%Y-%m-%d')%>">
                    </div>
                  </div>
                </div>
                <div class="box-footer" style="margin: 0px; padding-left: 0px; padding-top: 0px">
                  <input type="button" value="Aceptar" class="btn btn-success" onclick="consultar()">
                </div>
                <div class="form-group">
                  <div id='div_preview'>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>


<%= javascript_include_tag "componente_chats.js" %>
<%= javascript_include_tag "datos_vue_chats.js" %>
