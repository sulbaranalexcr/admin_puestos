<%= javascript_include_tag "axios.js" %>
<script>





function consultar_caballos(){
  swalert_espera("Espere, generando reporte...")
  axios({
    method: 'POST',
    url: '/unica/reportes/cuadre_general_por_agentes_externo',
    data: {
           "desde": $('#desde').val(),
           "hasta": $('#hasta').val(),
           "tipo": $("#tipo_reporte").val(),
           "producto": $("#producto").val()
          },
  })
  .then(function(response) {
       $('#cuerpo_div').html(response.data);
       Swal.close();
    }

)
.catch(function (error) {
    Swal.close();
    swal("Lo siento", "No hay datos.", "error");
});

}





</script>

