
<html>
<head>
  <title></title>
  <%=wicked_pdf_stylesheet_link_tag  'bootstrap.css'%>
</head>


<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title"><%= @nombre_reporte_mostrar%></h3>
          <table border=0>
            <tr>
              <td>
                Desde:
              </td>
              <td>
                <%=@desde%>
              </td>
            </tr>
            <tr>
              <td>
                Hasta:
              </td>
              <td>
                <%=@hasta%>
              </td>
            </tr>
          </table>
             <br/>

        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid" style="width: 100%;">
                  <thead>
                    <tr>
                      <th style="width: 50px;text-align: left;">Tipo</th>
                      <th style="text-align: left">Nombre</th>
                      <th  style="text-align: right;"><%= @tipo_cruzado%></th>
                      <th  style="text-align: right;">Premiado</th>
                      <th  style="text-align: right;">Comisi&oacute;n</th>
                    </tr>
                  </thead>

                  <tbody>
                    <%total1 = 0%>
                    <%total2 = 0%>
                    <%total4 = 0%>
                    <%total5 = 0%>
                    <%total6 = 0%>
                    <%total8 = 0%>
                    <% @reporte.each do |repo| %>
                      <tr>
                        <td> <%= repo['tipo'] %></td>
                        <td> <%= repo['nombre'] %></td>
                        <td style="text-align: right;"> <%= number_with_precision( repo['jugado_usd'] , precision: 2, separator: '.', delimiter: ',')%> </td>
                        <td style="text-align: right;"> <%= number_with_precision(repo['ganado_usd'], precision: 2, separator: '.', delimiter: ',') %> </td>
                        <td style="text-align: right;"> <%= number_with_precision( repo['comision_usd'].to_f , precision: 2, separator: '.', delimiter: ',') %> </td>
                       </tr>
                       <%total5 += repo['jugado_usd'].to_f%>
                       <%total6 += repo['ganado_usd'].to_f%>
                       <%total8 += repo['comision_usd'].to_f%>
                    <% end %>
                  </tbody>
                  <tfoot style="background-color: #A4A4A4;">
                    <tr>
                      <td>  </td>
                      <td style="font-weight: bold;"> Totales </td>
                      <td style="text-align: right;font-weight: bold;"> <%= number_with_precision( total5 , precision: 2, separator: '.', delimiter: ',')%> </td>
                      <td style="text-align: right;font-weight: bold;"> <%= number_with_precision( total6 , precision: 2, separator: '.', delimiter: ',')%> </td>
                      <td style="text-align: right;font-weight: bold;"> <%= number_with_precision( total8 , precision: 2, separator: '.', delimiter: ',')%> </td>
                    </tr>
                    <%if session[:usuario_actual]['tipo'] == "GRP"%>
                    <% por_usd_ban = (total8.to_f * @porcentaje_banca.to_f) / 100%>
                      <tr>
                        <td>  </td>
                        <td style="font-weight: bold;"> Comision Banca </td>
                        <td style="text-align: right;font-weight: bold;">  </td>
                        <td style="text-align: right;font-weight: bold;">  </td>
                        <td style="text-align: right;font-weight: bold;"> <%= number_with_precision( por_usd_ban , precision: 2, separator: '.', delimiter: ',')%> </td>
                      </tr>
                      <tr>
                        <td>  </td>
                        <td style="font-weight: bold;"> Ganancia Neta </td>
                        <td style="text-align: right;font-weight: bold;">  </td>
                        <td style="text-align: right;font-weight: bold;">  </td>
                        <td style="text-align: right;font-weight: bold;"> <%= number_with_precision( total8.to_f - por_usd_ban.to_f , precision: 2, separator: '.', delimiter: ',')%> </td>
                      </tr>
                    <%end%>
                  </tfoot>
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>
