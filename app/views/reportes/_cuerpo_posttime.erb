<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Post Time</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Usuario</th>
                      <th>Fecha</th>
                      <th>Hipodromo</th>
                      <th>Carrera</th>
                      <th>Hora Anterior</th>
                      <th>Nueva Hora</th>
                      <th>Minutos</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @reporte.each do |repo| %>
                      <tr>
                        <td> <%= repo.nombre_usuario%> </td>
                        <td> <%= repo.created_at.strftime('%d/%m/%Y %I:%M %p')%> </td>
                        <td> <%= repo.nombre_hipodromo%> </td>
                        <td> <%= repo.numero_carrera  %> </td>
                        <td> <%= repo.hora_anterior  %> </td>
                        <td> <%= repo.nueva_hora  %> </td>
                        <td> <%= (repo.nueva_hora.to_time - repo.hora_anterior.to_time) / 60 %> </td>                        
                       </tr>
                    <% end %>
                  </tbody>

                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>
