<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Listado de Ligas</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
          <select size=1 class="form-control" onchange="filtrar_hipodromos(this.value)" >
            <option value="0">Todas</option>
            <option value="1">Activas</option>
            <option value="2">Inactivas</option>
         </select>

            <div class="row">
              <div class="col-md-2 col-md-offset-10">
                <%= link_to 'Nueva Liga', new_liga_path, class: 'btn btn-success pull-right' %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Deporte ID</th>
                      <th>Deporte</th>
                      <th>Liga ID</th>
                      <th>Liga</th>
                      <th>Activa</th>
                      <th class="col-xs-1">Acci&oacute;n</th>
                    </tr>
                  </thead>

                  <tbody id="cuerpo_ligas">
                    <% @ligas.each do |liga| %>
                      <tr>
                        <td> <%= liga.juego_id %> </td>
                        <td> <%= liga.nombre_deporte %> </td>
                        <td> <%= liga.liga_id %> </td>
                        <td> <%= liga.nombre %> </td>
                        <td> <%= liga.activo ? "SI":"NO" %> </td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_liga_url(liga), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), liga_url(liga), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Esta seguro de eliminar este liga?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>
<script>
   function filtrar_hipodromos(id){
             axios({
            method: 'POST',
            url: '/ligas/filtrar',
            data: {"id": id},
        })
        .then(function(response) {
            $('#cuerpo_ligas').html(response.data);
            }
        )
    }
</script>
