<%= form_for @liga, url: @url, role: :form, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Editar Liga</h3>
        </div>

       <div class="box-body">
          <div class="form-group">
            <%= f.label 'Deporte ID' %>
            <%= f.text_field :juego_id, class: "form-control", style: 'width: 20%', required: true, readonly: true%>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>

          <div class="form-group">
            <%= f.label 'Liga ID' %>
            <%= f.text_field :liga_id, class: "form-control", style: 'width: 20%', required: true, readonly: true%>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>


          <div class="form-group">
            <%= f.label 'Nombre' %>
            <%= f.text_field :nombre, class: "form-control", placeholder: "Ingrese nombre de liga", required: true %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>


            <div class="card col-xs-2" style="margin-left: -10px;">
               <ul class="list-group list-group-flush">
                 <li class="list-group-item" style="height: 40px;" >
                     <label style="color: black;font-family: 'Arial', Gadget, sans-serif;font-size: 11px;">Activo</label>
                     <label class="switch ">  <input type="checkbox" id="radio" name="radio_activo" <%= @liga.activo ? 'checked': ''%> class="success hipos btn-sm"> <span class="slider round"></span> </label>
                 </li>
               </ul>
             </div>



        </div>

        <div class="box-footer">
          <%= link_to 'Cancelar', ligas_path, class: 'btn btn-danger' %>
          <%= f.submit 'Enviar', class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
<% end %>


<script>
   window.boton_check() ;
</script>
