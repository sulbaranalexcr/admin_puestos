<%= form_for @grupo, url: @url, role: :form, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Editando Grupo</h3>
        </div>

        <div class="box-body">
          <div class="form-group">
            <%= f.label 'Nombre' %>
            <%= f.text_field :nombre, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>

          </div>


          <div class="form-group">
            <%= f.label 'Representante' %>
            <%= f.text_field :representante, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>

          <div class="form-group">
            <%= f.label 'Telefono' %>
            <%= f.text_field :telefono, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>

          <div class="form-group">
            <%= f.label 'E-mail' %>
            <%= f.email_field :correo, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>

          <div class="form-group">
            <%= f.label '% Banca' %>
            <%= f.number_field :porcentaje_banca, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>

          <div class="form-group">
            <%= f.label '% Taquilla' %>
            <%= f.number_field :porcentaje_taquilla, class: "form-control", style: 'width: 50%' %>
          </div>

          <div class="form-group">
            <label for="grupo_id">Intermediario</label>
            <select size=1 class="form-control" placeholder="Grupo"  name="grupo[intermediario_id]" id="grupo_intermediario_id" style="width: 50%;"/>
            <%if session[:usuario_actual]['tipo'] == "ADM"%>
            <option value="0">Sin Intermediario</option>
                <%inter = Intermediario.all.order(:nombre)%>
              <%else%>
                <%inter = Intermediario.where(id: session[:usuario_actual]['intermediario_id']).order(:nombre)%>
              <%end%>
              <%for intermediario in inter%>
                 <option value="<%= intermediario.id%>" <%= intermediario.id == @grupo.intermediario_id ? "selected":""%> ><%= intermediario.nombre%></option>
              <%end%>
          </select>
          </div>




          <div class="form-group">
            <%= f.label '% Intermediario' %>
            <%= f.number_field :porcentaje_intermediario, class: "form-control", style: 'width: 50%' %>
            <span class="help-block"><i>* Este campo es requerido</i><span>
          </div>


          <div class="form-group">
            <%= f.label 'Activo' %>
            <%= f.check_box :activo, {}%>
          </div>


        </div>

        <div class="box-footer">
          <%= link_to 'Cancelar', grupos_path, class: 'btn btn-danger' %>
          <%= f.submit 'Enviar', class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
<% end %>
