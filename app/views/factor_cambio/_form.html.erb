<div class="box">


  <div class="box-body">

    <div class="box-body">
    <div class="form-group col-sm-4">
        <label for="banco">Moneda</label>
        <select size=1 class="form-control" placeholder="Moneda"  name="moneda" id="moneda" >
          <option value="0" >Selecciona Moneda</option>
        <%for moneda in @monedas%>
           <option value="<%= moneda.id%>" <%= @factor.moneda_id == moneda.id ? "selected":"" %>><%= moneda.abreviatura%> (<%= moneda.pais%>)</option>
        <%end%>
        </select>
      </div>
      <div class="form-group col-sm-4">
        <%= f.label :valor_dolar %>
        <input type="number" step="0.01" class="form-control" placeholder="Tasa" required="true" name="tasa" value="<%= @factor.valor_dolar%>">
        <span class="help-block"><i>* Este campo es requerido</i><span>
      </div>

   </div>
</div>
</div>


<script>
   function mostrar_nombre_banco(id){
     if (id == "0"){
       $('#nombre_banco').show();
     }else{
       $('#nombre_banco').hide();
     }
   }
</script>
