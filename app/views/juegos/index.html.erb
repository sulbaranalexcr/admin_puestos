<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Listado de Deportes</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Deporte</th>
                      <th class="col-xs-1">Acci&oacute;n</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @juegos.each do |juego| %>
                      <tr>
                        <td> <%= juego.juego_id %> </td>
                        <td> <%= juego.nombre %> </td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_juego_url(juego), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), juego_url(juego), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Esta seguro de eliminar este juego?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'Nuevo Deporte', new_juego_path, class: 'btn btn-success pull-right' %>
  </div>
</div>
