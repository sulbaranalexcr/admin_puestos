  <script src="/assets/carreras.js"></script>
<%= form_for @jornada, url: @url, role: :form, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">Crear carreras</h3>
        </div>

        <div class="form-group">
          <table boder=0>
            <tr>
              <td>
                <div class="box-body">
                  <div class="form-group">
                    <label for="hipodromo_tipo">Hipodromo</label>
                    <input type="text" class="form-control" value="<%= @jornada.hipodromo.nombre%>" disabled="true">
                  </div>
              </td>
              <td>
                <div class="form-group">
                  <%= f.label 'Fecha de jornada' %>
                  <%= f.date_field :fecha, min: Time.now, max: Time.now.end_of_year,class: "form-control", disabled: true %>
                </div>
              </td>
              <td>
                <div class="form-group">
                  <%= f.label 'Cantidad de carreras' , style: 'margin-left: 10px;'%>
                  <%= f.text_field :cantidad_carreras, class: "form-control", placeholder: "Cantidad", disabled: true, style: 'margin-left: 10px;' %>
                </div>
              </td>
            </tr>
          </table>


          <div class="form-group">
            <label for="hipodromo_tipo"  style= 'margin-left: 10px;'>Carreras</label>
            <select size=1 class="form-control" placeholder="Tipo"  name="carrera_nueva" id="carrera_nueva"  style= 'margin-left: 10px;width: 150px;' onchange="verificar_crrera(this.value,'<%= @jornada.id %>');"/>
            <option value="0" >Seleccione </option>
            <%for carrera in @jornada.carrera%>
            <option value="<%= carrera.numero_carrera %>" >Carrera #<%= carrera.numero_carrera %></option>
            <%end%>
          </select>
          <label for="hora"  style= 'margin-left: 10px;'>Hora de carrera</label>
          <input type="time" value ="0"  class= "form-control"  placeholder= "Hora" required= true id ='hora_carrera' name= 'hora_carrera'  style= 'margin-left: 10px;width: 150px;' required="true" >
          <span class="help-block"><i>* Este campo es requerido</i><span>
            <table border=0 style="width: 20%" id="tabla_crear">
              <tr>
                <td >
                <label for="hipodromo_tipo"  style= 'margin-left: 10px;'>Cantidad de caballos</label>
                <input type="text" value ="0"  class= "form-control"  placeholder= "Cantidad" required= true id='cantidad_caballos' name='cantidad_caballos'  style= 'margin-left: 10px;width: 150px;'>
                <span class="help-block"><i>* Este campo es requerido</i><span>
                </td>
                <td valign="top" >
                  <input type="button" id="boton_crear" value="Crear caballos" onclick="caballos($('#cantidad_caballos').val())"  class="btn btn-success" style="margin-left: 0px;margin-top: 25px"/>
                </td>
              </tr>
            </table>

          </div>

          <div id="caballos"  style= 'margin-left: 10px;'>
          </div>


        </div>

        <div class="box-footer">
          <%= link_to 'Cancelar', admin_jornadas_path, class: 'btn btn-danger' %>
          <%= f.submit 'Enviar', class: "btn btn-success" %>
        </div>

      </div>
    </div>
  </div>
  <input type="hidden" name="carrera_hidden" id="carrera_hidden" />
<% end %>
