<div class="login-logo">
  <a href=""><b style="color: #ffffff;">Banca</b></a>
</div>
<div class="login-box-body <%= flash[:alert].present? ? 'erthquake' : '' %>">
  <p class="login-box-msg">Iniciar Sesi√≥n</p>
  <%=form_for :user, url: {action: "create"} do |field|%>
  <div class="form-group has-feedback <%= flash[:alert].present? ? 'has-error' : '' %>">
    <%=field.text_field :username, class: 'form-control', placeholder: 'Usuario', :autofocus => true %>
    <span class="fa fa-user form-control-feedback"></span>
  </div>

  <div class="form-group has-feedback <%= flash[:alert].present? ? 'has-error' : '' %>">
    <%=field.password_field :password, class: 'form-control', placeholder: 'Clave' %>
    <span class="fa fa-key form-control-feedback"></span>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <button type="submit" class="btn btn-success btn-block btn-flat">Entrar</button>
    </div>
    <div class="col-xs-12">
      <%if flash[:alert]%>
      <div class=" text-center text-danger">
        <%=flash[:alert]%>
      </div>
      <%end%>
    </div>
  </div>
</div>

<%end%>
